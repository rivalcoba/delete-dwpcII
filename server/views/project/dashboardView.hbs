<h1>Listado de Proyectos</h1>
<ul>
    {{#each projects}}
    <div class="col s12 m7">
    <h2 class="header" style="font-size: xx-large; color: #555">{{name}}</h2>
    <div class="card horizontal teal darken-4" style="padding: 2rem;">
      <div class="card-image">
        <img height="100rem" src="/images/project_avatar.png">
      </div>
      <div class="card-stacked">
        <div class="card-content teal-text text-lighten-5">
          <p>{{description}}</p>
        </div>
        <div class="card-action">
          <a href="/project/edit/{{_id}}">
            <i class="material-icons"
              style="display: inline-flex; vertical-align: sub"
              >edit</i>
            <span>EDITAR PROYECTO</span>
          </a>
          <a href="javascript: deleteProject('{{_id}}')" class="inline">
            <i class="material-icons"
              style="display: inline-flex; vertical-align: sub"
              >delete</i>
            <span>Borrar Proyecto</span>
          </a>
        </div>
      </div>
    </div>
  </div>
    {{else}}
    <p>No hay proyectos que listar ðŸ˜”</p>
    {{/each}}
</ul>