{{#if successMessage}}
  <script>
    document.querySelector('script[src="/bundle.js"]').onload = ()=>{ M.toast({
    html: "<i class='material-icons'>check_circle</i> {{successMessage}}", 
    classes: 'card-panel green accent-4 white-text',
    displayLength: 2000 }) }
  </script>
{{/if}}
